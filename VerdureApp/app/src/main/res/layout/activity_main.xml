<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Checking notification access..."
        android:textSize="16sp"
        android:padding="8dp"/>

    <Button
        android:id="@+id/requestPermissionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enable Notification Access"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/notificationCountText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No notifications captured yet"
        android:textSize="14sp"
        android:textStyle="bold"
        android:padding="8dp"
        android:layout_marginTop="16dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/notificationListText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notifications will appear here..."
            android:textSize="14sp"
            android:fontFamily="monospace"
            android:padding="8dp"/>
    </ScrollView>

</LinearLayout>
