<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_primary">

    <!-- Header with Status -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="12dp"
        android:background="@color/background_secondary">

        <!-- App Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VERDURE"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/accent_primary"
            android:letterSpacing="0.1"
            android:layout_marginBottom="8dp"/>

        <!-- Status Text -->
        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Checking permissions..."
            android:textSize="13sp"
            android:textColor="@color/text_secondary"/>

        <!-- Permission Button -->
        <Button
            android:id="@+id/requestPermissionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enable Permissions"
            android:textColor="@color/background_primary"
            android:backgroundTint="@color/accent_primary"
            android:layout_marginTop="8dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textSize="13sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <!-- Chat Section -->
    <ScrollView
        android:id="@+id/chatScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/chatHistoryContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Welcome Message -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hi! I'm V, your personal AI assistant.\n\nI can help you manage your notifications and priorities. Try asking me:\n\n• \"What's urgent today?\"\n• \"Prioritize Discord messages\"\n• \"What are my priorities?\""
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:padding="16dp"
                android:background="@drawable/message_bubble_ai"
                android:layout_marginBottom="12dp"/>

        </LinearLayout>
    </ScrollView>

    <!-- Input Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/background_secondary"
        android:elevation="4dp">

        <EditText
            android:id="@+id/chatInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Type your message..."
            android:textColorHint="@color/text_tertiary"
            android:textColor="@color/text_primary"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLines="4"
            android:padding="14dp"
            android:background="@drawable/input_background"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/sendButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:textColor="@color/background_primary"
            android:backgroundTint="@color/accent_primary"
            android:layout_marginStart="12dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:textStyle="bold"
            android:textSize="14sp"/>

    </LinearLayout>

</LinearLayout>
