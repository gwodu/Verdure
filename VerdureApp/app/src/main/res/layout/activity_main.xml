<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Status and Permission Section -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Checking permissions..."
        android:textSize="16sp"
        android:padding="8dp"/>

    <Button
        android:id="@+id/requestPermissionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enable Permissions"
        android:layout_marginTop="8dp"/>

    <!-- LLM Test Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ¤– LLM TEST"
        android:textSize="14sp"
        android:textStyle="bold"
        android:padding="8dp"
        android:layout_marginTop="16dp"
        android:background="#E3F2FD"/>

    <Button
        android:id="@+id/testLlmButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test LLM: Say Hello"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/llmResponseText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="(LLM response will appear here)"
        android:textSize="12sp"
        android:fontFamily="monospace"
        android:padding="8dp"
        android:background="#F5F5F5"
        android:minHeight="60dp"/>

    <!-- System Context -->
    <TextView
        android:id="@+id/systemContextText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Loading system context..."
        android:textSize="14sp"
        android:textStyle="italic"
        android:padding="8dp"
        android:layout_marginTop="8dp"/>

    <!-- Day Planner ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Calendar Events Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“… UPCOMING EVENTS"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:background="#E8F5E9"/>

            <TextView
                android:id="@+id/calendarEventsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loading calendar events..."
                android:textSize="14sp"
                android:fontFamily="monospace"
                android:padding="8dp"/>

            <!-- Notifications Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“± NOTIFICATIONS"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:layout_marginTop="16dp"
                android:background="#FFF3E0"/>

            <LinearLayout
                android:id="@+id/notificationListContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/notificationListText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Waiting for notifications..."
                    android:textSize="14sp"
                    android:fontFamily="monospace"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
