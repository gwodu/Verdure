<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Status and Permission Section -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Checking permissions..."
        android:textSize="16sp"
        android:padding="8dp"/>

    <Button
        android:id="@+id/requestPermissionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enable Permissions"
        android:layout_marginTop="8dp"/>

    <!-- Chat with V Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ’¬ CHAT WITH V"
        android:textSize="14sp"
        android:textStyle="bold"
        android:padding="8dp"
        android:layout_marginTop="16dp"
        android:background="#E3F2FD"/>

    <!-- Chat History -->
    <ScrollView
        android:id="@+id/chatScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:background="#F5F5F5"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/chatHistoryContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="V: Hi! I'm V, your personal AI assistant. How can I help you today?"
                android:textSize="14sp"
                android:padding="8dp"
                android:background="#E8F5E9"
                android:layout_marginBottom="4dp"/>

        </LinearLayout>
    </ScrollView>

    <!-- Chat Input -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/chatInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Type your message..."
            android:inputType="textCapSentences|textMultiLine"
            android:maxLines="3"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"/>

        <Button
            android:id="@+id/sendButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

    <!-- System Context -->
    <TextView
        android:id="@+id/systemContextText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Loading system context..."
        android:textSize="14sp"
        android:textStyle="italic"
        android:padding="8dp"
        android:layout_marginTop="8dp"/>

    <!-- Day Planner ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Calendar Events Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“… UPCOMING EVENTS"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:background="#E8F5E9"/>

            <TextView
                android:id="@+id/calendarEventsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loading calendar events..."
                android:textSize="14sp"
                android:fontFamily="monospace"
                android:padding="8dp"/>

            <!-- Notifications Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“± NOTIFICATIONS"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:layout_marginTop="16dp"
                android:background="#FFF3E0"/>

            <LinearLayout
                android:id="@+id/notificationListContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/notificationListText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Waiting for notifications..."
                    android:textSize="14sp"
                    android:fontFamily="monospace"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
